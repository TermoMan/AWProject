<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/css/list.css" />
    <!-- <link rel="shortcut icon" type=”image/png” href="/img/favicon.png"/> -->
    <title>Collectio - Elementos</title>
  </head>
  <body class="bg-dark">
    <!--Cabecera -->
    <%- include('header', { pageName: ''}) %>
    <!--Contenido-->
    <main>
      <div class="container-md">
        <h2>Elementos</h2>
        <div class="row my-5">
          <div class="col d-flex justify-content-between">
            <form action="/collections/filterByName"  method="POST" class="d-flex flex-row">
              <input type="text" class="form-control me-3" name="name" />
              <input type="hidden" name="collectionId" value="<%=listCollectionItems.collectionId%>">
              <input type="submit" class="btn btn-light" value="Buscar" />
            </form>
        <% if (listCollectionItems.userCollection) { %>
          <div>
            <a href="/collections/<%=listCollectionItems.collectionId%>/create" class="btn btn-primary d-inline-block ms-2"
              >Añadir elemento</a
            >
            <a href="/collections/<%=listCollectionItems.collectionId%>/public" class="btn btn-primary d-inline-block ms-2"
              >Ver elementos públicos</a
            >
          </div>
            
        <% } %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <% if (listCollectionItems.userCollection || listCollectionItems.privat === false) { %>
            <% if (listCollectionItems.listCollectionItems.length == 0) { %>
              <% if (listCollectionItems.userCollection){ %>
                <div class="alert alert-dark" role="alert">
                  No hay elementos en la colección. Si quieres añadir uno, pulsa sobre el botón "Añadir elemento".
                </div>
              <% } else { %>
                <div class="alert alert-dark" role="alert">
                  No hay elementos en la colección.
                </div>
              <% } %>
            <% } else { %>
            <div class="table-responsive">
              <table
                class="table table-dark table-striped table-hover items-list"
              >
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <% if (listCollectionItems.userCollection) { %>
                    <th>Privado</th>
                    <%} %>
                    <th>Imagen</th>
                    <% if (listCollectionItems.userCollection) { %> <!-- Solo se muestra la opción de eliminar si el usuario es el dueño de la colección-->
                      <th>Opciones</th>
                    <%} %>
                  </tr>
                </thead>
                <tbody>
                  <% listCollectionItems.listCollectionItems.forEach(function(item) { %>
                    <% if (listCollectionItems.userCollection || item.privat === 0){ %>
                  <tr>
                    <td><a class="link-light" href="/collections/viewItem/<%=item.id%>"><%= item.name %></a></td>
                    <% if (item.description) { %>
                    <td><%= item.description %></td>
                    <% } else { %>
                      <td> Sin descripción </td>
                  <% } %>
                  <% if (listCollectionItems.userCollection) { %> 
                    <% if (item.privat == 1) { %>
                    <td>
                      Sí
                    </td>
                    <% } else { %>
                      <td> No </td>
                      <% } %>
                  <%} %>
                    <% if (item.image == null) { %>
                        <td>Sin imágenes</td>
                    <% } else { %>
                        <td><img src="/collections/getItemImage/<%=item.image%>"></td>
                    <% } %>
                    <% if (listCollectionItems.userCollection) { %> 
                      <td>
                        <a
                          href="/collections/deleteItem/<%= item.id %>"
                          class="btn btn-danger btn-sm item-delete"
                          name="delete"
                        >
                          Eliminar
                        </a>
                      </td>
                    <%} %>
                  </tr>
                  <%} %>
                  <% }); %>
                </tbody>
              </table>
              <script type="text/javascript">
                let elements = document.getElementsByName("delete"); //Se obtienen todos los enlaces de eliminar
                for (let i = 0; i < elements.length; i++) {
                  elements[i].addEventListener('click', function (e) { //Cuando se pulse sobre un enlace, aparece un mensaje de confirmación
                    if (!confirm("¿Estás seguro de que quieres eliminar este elemento?")){
                      //window.location.href = this.getAttribute("href");
                      e.preventDefault();
                    }
                  });
                }
              </script>
            </div>
            <% } %>
            <% }else { %>
              <div class="alert alert-dark" role="alert">
                No tienes acceso a esta colección.
              </div>
          <% } %>
          </div>
        </div>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
  </body>
</html>