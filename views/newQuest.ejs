<!DOCTYPE html>
<html>
    <head>
        <%- include('index') %>
    </head>
    <body class="p-3 mb-2 bg-dark text-light">
        <div>
            <div>
                <% if(error) { %>
                    <div class="errorMessage">
                        <%=error%>
                    </div>
                <% } %>
            </div>
            <div>
                <p class="text-center">Formular una pregunta</p>
            </div>
            <div class="container">

                <form role="form">
                    <div class="form-group">
                        <label for="correo">Titulo*</label>
                        <input type="text" class="form-control" id="titulo">
                    </div>
        
                    <div class="form-group">
                        <label for="contraseña">Contraseña*</label>
                        <input type="password" class="form-control" id="contraseña">
                    </div>
        
                    <div class="form-group">
                        <label for="contraseñaconf">Confirmar contraseña*</label>
                        <input type="password" class="form-control" id="contraseñaconf">
                    </div>
        
                    <div class="form-group">
                        <label for="nick">Nombre para mostrar*</label>
                        <input type="text" class="form-control" id="nick">
                    </div>
        
                    <div class="form-group">
                        <label for="imagen">Imagen de perfil</label>
                        <form name="subida-imagenes" type="POST" enctype="multipart/formdata"> <input type="file" name="imagen" /> </form>
                    </div>
        
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    <br>
                    <button type="submit" class="btn btn-primary">Crear cuenta</button>
            </div>
        </div>
    </body>
</html>


